<mvc:View
    controllerName = "app.controller.App"
    xmlns="sap.m"
    xmlns:table = "sap.ui.table"
    xmlns:core = "sap.ui.core"
    xmlns:u="sap.ui.unified"
    xmlns:mvc="sap.ui.core.mvc">

        <Text text = "{/tables/name}"/>
        <Button press=".onPress" text="say hello"/>
        <Input
            width = "30%"
            value = "{path:'testModel>/company/revenue',formatter:'.roundToMillion'}"
         description = "{testModel>/company/revenue}"
         valueLiveUpdate="true"
         />

        <FlexBox
            width = "100%"
            alignItems="Start"
            justifyContent="Start">
            
                <SelectList id="idSelectList"
                    class = "sapUiSmallMarginEnd"
                    selectionChange = ".onTableSelect"
                    width = "300px"
					items="{
						path: '/Row',
						sorter: { path: 'TableName' }
					}">
					<core:Item key="{TableName}" text="{TableName}" />
				</SelectList>
                
                <SelectList id="idColList"
                    items="{colModel>/columns}"
                    width = "300px">
					<core:Item text ="{colModel>colName}"/>
				</SelectList>
        </FlexBox>
<HBox width = "100%" class="sapUiSmallMargin" >
<Button text="Paste"/>
</HBox>        
<HBox width = "100%">
        <TextArea id = "idQueryTextArea" class="sapUiSmallMargin" value="test" growing="true" width="800px" height = "200px"/>
</HBox>
</mvc:View>
